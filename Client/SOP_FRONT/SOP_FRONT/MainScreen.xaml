<Page x:Class="SOP_FRONT.MainScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SOP_FRONT"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainScreen">

    <Grid>
        <StackPanel Orientation="Vertical" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Width="400" Height="100">
                    <TextBlock  Margin="40,10,10,10">Új Post Szövege</TextBlock>
                    <TextBox  Margin="40,0,10,10" Height="40" x:Name="addNewPostText"/>
                </StackPanel >
                <StackPanel  Width="400" Height="100" >
                    <Button x:Name="addNewPost" Content="Új Post Küldése" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,50,0,0" Width="100"/>
                </StackPanel >
            </StackPanel >
            <StackPanel >
                <ScrollViewer MaxHeight="350" Padding="10,10,10,10" x:Name="InputScrollContainer">
                    <StackPanel Margin="10,10,10,10" Name="ProjectMainStackPanel"></StackPanel >
                </ScrollViewer>
            </StackPanel >
        </StackPanel >
    </Grid>
</Page>
